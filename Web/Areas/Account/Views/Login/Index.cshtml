@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Shared/Views/_LayoutLogin.cshtml";
    var version = typeof(Web.MvcApplication).Assembly.GetName().Version;
}

@section Scripts{
    <script src="~/Content/js/account/index.js"></script>
}

@section Styles{
    <link href="~/Content/css/account/index.css" rel="stylesheet">
}




<div class="row justify-content-center dv-container">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">
                                    <img src="~/Content/img/logo/login-logo.png" />
                                </h1>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="fld-email" name="Email" aria-describedby="emailHelp" placeholder="Enter Email Address...">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-user" id="fld-password" name="Password" placeholder="Password">
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox small">
                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                    <label class="custom-control-label" for="customCheck">Remember Me</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block btn-login">Login</button>
                            <hr>
                            <br /><br /><br />
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/Account/Login/ForgotPassword">Forgot Password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>